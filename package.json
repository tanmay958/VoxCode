{
  "name": "code-voice-explainer",
  "displayName": "Code Voice Explainer",
  "description": "Explains code using AI and converts explanations to voice using Murf.ai TTS",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Education"
  ],
  "keywords": [
    "code explanation",
    "TTS",
    "voice",
    "AI",
    "murf.ai"
  ],
  "activationEvents": [
    "onCommand:codeVoiceExplainer.explainCode",
    "onCommand:codeVoiceExplainer.explainSelection"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeVoiceExplainer.explainCode",
        "title": "Explain Code with Voice",
        "category": "Code Voice Explainer"
      },
      {
        "command": "codeVoiceExplainer.explainSelection",
        "title": "Explain Selected Code with Voice",
        "category": "Code Voice Explainer"
      },
      {
        "command": "codeVoiceExplainer.openSettings",
        "title": "Open Code Voice Explainer Settings",
        "category": "Code Voice Explainer"
      },
      {
        "command": "codeVoiceExplainer.selectVoice",
        "title": "Select Voice Language & Style",
        "category": "Code Voice Explainer"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "codeVoiceExplainer.explainSelection",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "codeVoiceExplainer.explainCode",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Code Voice Explainer",
